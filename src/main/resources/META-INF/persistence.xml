<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="auctionPU" transaction-type="RESOURCE_LOCAL">
        <class>com.david.auction.domain.User</class>
        <class>com.david.auction.domain.Auction</class>
        <class>com.david.auction.domain.Bid</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:auctiondb;DB_CLOSE_DELAY=-1"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>